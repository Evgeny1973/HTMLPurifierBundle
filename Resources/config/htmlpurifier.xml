<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="htmlpurifier.class">Bundle\ExerciseCom\HTMLPurifierBundle\HTMLPurifier</parameter>

    <parameter key="htmlpurifier.options" type="collection">
        <parameter key="cache_dir">%kernel.root_dir%/cache/htmlpurifier</parameter>
        <parameter key="enable_youtube">true</parameter>
        <parameter key="allowed_html">null</parameter>
        <parameter key="base_uri">null</parameter>
        <parameter key="absolute_uri">null</parameter>
    </parameter>

  </parameters>

  <services>
    <service id="htmlpurifier" class="%htmlpurifier.class%">
        <argument>%htmlpurifier.options%</argument>
    </service>
  </services>
</container>
